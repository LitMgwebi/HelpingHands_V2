
@{
    ViewData["Title"] = "Manager Dashboard";
}
<h2 class="display-2 text-center">Hello @User.Identity?.Name</h2>
<hr />
<div class="container-fluid">
    <div class="row">
        <div class="col-3">
            <nav id="navbar-example3" class="h-100 flex-column align-items-stretch pe-4 border-end">
                <nav class="nav nav-pills flex-column">
                    <a class="nav-link" href="#employees">Employees</a>
                    <nav class="nav nav-pills flex-column">
                        <a class="nav-link ms-3 my-1" href="#managers">Managers</a>
                        <a class="nav-link ms-3 my-1" href="#nurses">Nurses</a>
                    </nav>
                    <a class="nav-link" href="#locations">Location</a>
                    <nav class="nav nav-pills flex-column">
                        <a class="nav-link ms-3 my-1" href="#cities">Cities</a>
                        <a class="nav-link ms-3 my-1" href="#suburbs">Suburbs</a>
                    </nav>
                </nav>
            </nav>

        </div>
        <div class="col-6">
            <div data-bs-spy="scroll" data-bs-target="#navbar-example3" data-bs-smooth-scroll="true" class="scrollspy-example-2" tabindex="0">
                <div id="employees" class="gx-5">
                    <h3>Employees</h3>
                    <p>A quick look at some employees</p>
                </div>
                <div id="managers" class="table-responsive gx-5">
                    <table class="table table-sm table-hover table-striped">
                        <caption>Managers</caption>
                        <thead>
                            <tr>
                                <th scope="col">First Name</th>
                                <th scope="col">Last Name</th>
                                <th scope="col">Username</th>
                                <th scope="col">Profile</th>
                            </tr>
                        </thead>
                        <tbody class="table-group-divider">
                            @foreach (var manager in ViewBag.Managers)
                            {
                                <tr scope="row">
                                    <td>@manager.Firstname</td>
                                    <td>@manager.Lastname</td>
                                    <td>@manager.Username</td>
                                    <td>@manager.ProfilePicture</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a>...See More</a>
                </div>
                <div id="nurses" class="table-responsive">
                    <table class="table table-sm table-hover table-striped">
                        <caption>Nurses</caption>
                        <thead>
                            <tr>
                                <th scope="col">First Name</th>
                                <th scope="col">Last Name</th>
                                <th scope="col">Username</th>
                                <th scope="col">Profile</th>
                            </tr>
                        </thead>
                        <tbody class="table-group-divider">
                            @foreach (var nurse in ViewBag.Nurses)
                            {
                                <tr scope="row">
                                    <td>@nurse.Firstname</td>
                                    <td>@nurse.Lastname</td>
                                    <td>@nurse.Username</td>
                                    <td>@nurse.ProfilePicture</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a>...See More</a>
                </div>
                <div id="locations">
                    <h3>Locations</h3>
                    <p>A quick look at some locations</p>
                </div>
                <div id="cities" class="table-responsive">
                    <table class="table table-sm table-hover table-striped">
                        <caption>Cities</caption>
                        <thead>
                            <tr>
                                <th scope="col">City Name</th>
                                <th scope="col">City Abbreviation</th>
                            </tr>
                        </thead>
                        <tbody class="table-group-divider">
                            @foreach (var city in ViewBag.Cities)
                            {
                                <tr scope="row">
                                    <td>@city.CityName</td>
                                    <td>@city.CityAbbreviation</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a>...See More</a>
                </div>
                <div id="suburbs" class="table-responsive">
                    <table class="table table-sm table-hover table-striped">
                        <caption>Suburbs</caption>
                        <thead>
                            <tr>
                                <th scope="col">Suburb Name</th>
                                <th scope="col">Postal Code</th>
                                <th scope="col">City</th>
                            </tr>
                        </thead>
                        <tbody class="table-group-divider">
                            @foreach (var suburb in ViewBag.Suburbs)
                            {
                                <tr scope="row">
                                    <td>@suburb.SuburbName</td>
                                    <td>@suburb.PostalCode</td>
                                    <td>@suburb.CityName</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a>...See More</a>
                </div>
            </div>
        </div>
        <div class="col-3">
            <h3>Helping Hands informations</h3>
        </div>
    </div>
</div>