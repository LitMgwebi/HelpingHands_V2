@model HelpingHands_V2.Models.PrefferedSuburb

@{
    ViewData["Title"] = "Details";
    var PS = ViewBag.PrefferedSuburb;
}

<h2 class="display-4 text-center">Details</h2>
<a asp-action="IndexForNurse" asp-route-id="@User.FindFirst("UserId")!.Value" class="btn btn-secondary">Back</a>

<hr />
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nurse)
        </dt>
        <dd class = "col-sm-10">
            @PS.NurseFirstname @PS.NurseLastname
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Suburb)
        </dt>
        <dd class = "col-sm-10">
            @PS.SuburbName
        </dd>
    </dl>
</div>
<div class="btn-group" role="group" aria-label="Control Panel">
    <form asp-action="Delete">
        <input asp-for="NurseId" value="@PS.NurseId" type="hidden" />
        <input asp-for="SuburbId" value="@PS.SuburbId" type="hidden" />
        <input asp-for="Active" value="@PS.Active" type="hidden" />
        <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete this record?')" class="btn btn-danger" /> |
    </form>
</div>
