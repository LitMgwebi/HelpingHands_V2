@model HelpingHands_V2.Models.PrefferedSuburb

@{
    ViewData["Title"] = "Details";
    var Message = ViewBag.Message;
}

<h2 class="display-4 text-center">Details</h2>
@if (Message != null)
{
    <p class="text-decoration-underline text-danger">@Message</p>
}
@if (User.IsInRole("A") || User.IsInRole("O"))
{
    <a asp-action="Index" class="btn btn-secondary">Back</a>
}
else
{
    <a asp-action="IndexForNurse" asp-route-id="@User.FindFirst("UserId")!.Value" class="btn btn-secondary">Back</a>
}
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nurse)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nurse!.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Suburb)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Suburb!.SuburbName)
        </dd>
    </dl>
</div>
<div class="btn-group" role="group" aria-label="Control Panel">
    <form asp-action="Delete">
        <input asp-for="NurseId" value="@Model?.NurseId" type="hidden" />
        <input asp-for="SuburbId" value="@Model?.SuburbId" type="hidden" />
        <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete this record?')" class="btn btn-danger" />
    </form>
</div>
