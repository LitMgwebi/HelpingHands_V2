@model HelpingHands_V2.Models.PrefferedSuburb

@{
    ViewData["Title"] = "Create";
}

<h2 class="display-4 text-center">Nurse Suburb Form</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NurseId" class="control-label"></label>
                <input asp-for="NurseId" placeholder="@ViewBag.NurseId" value="@ViewBag.NurseId" hidden />
            </div>
            <div class="form-group">
                <label asp-for="SuburbId" class="control-label"></label>
                <select asp-for="SuburbId" class ="form-control" asp-items="ViewBag.SuburbId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="IndexForNurse" class="btn btn-secondary" asp-route-id="@User.FindFirst("UserId")!.Value">Cancel</a>
            </div>
        </form>
    </div>
</div>