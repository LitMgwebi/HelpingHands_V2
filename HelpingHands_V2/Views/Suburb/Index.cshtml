@model HelpingHands_V2.ViewModels.SuburbsViewModel

@{
    ViewData["Title"] = "Suburbs";
    var Message = ViewBag.Message;
}

<h2 class="display-4 text-center">Suburbs</h2>
@if (Message != null)
{
    <p class="text-decoration-underline text-danger">@Message</p>
}
<hr />
<a asp-action="Create" class="btn btn-primary">Create New</a>

<div class="container-fluid">
    <div class="row row-cols-auto">
        <div class="col-lg-8">
            <table class="table" id="myTable">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Suburb!.SuburbName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Suburb!.PostalCode)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Suburb!.City)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Suburbs!)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.SuburbName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PostalCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.City!.CityName)
                            </td>
                            <td>
                                <div class="btn-group" aria-label="Control Panel">
                                    <form asp-action="Index">
                                        <input asp-for="@item.SuburbId" name="SuburbId" type="hidden" />
                                        <input type="submit" value="Edit" class="btn btn-success" />
                                    </form>

                                    <form asp-action="Delete">
                                        <input asp-for="@item!.SuburbId" name="SuburbId" type="hidden" />
                                        <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete: @item?.SuburbName?')" class="btn btn-danger" />
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
        <div class="col-lg-4">
            @if(Model.Suburb != null)
            {
                <h2 class="display-5 text-center">Edit @Model?.Suburb!.SuburbName</h2>
                @if (Message != null)
                {
                    <p class="text-decoration-underline text-danger">@Message</p>
                }
                <section class="px-5 py-4">
                    <hr />
                </section>
                <div class="row">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input asp-for="Suburb!.SuburbId" type="hidden" />
                            <div class="input-group-sm">
                                <label asp-for="Suburb!.SuburbName" class="form-label"></label>
                                <input asp-for="Suburb!.SuburbName" class="form-control" />
                                <span asp-validation-for="Suburb!.SuburbName" class="text-danger"></span>
                            </div>
                            <div class="input-group-sm">
                                <label asp-for="Suburb!.PostalCode" class="form-label"></label>
                                <input asp-for="Suburb!.PostalCode" class="form-control" />
                                <span asp-validation-for="Suburb!.PostalCode" class="text-danger"></span>
                            </div>
                            <div class="input-group-sm">
                                <label asp-for="Suburb!.CityId" class="form-label"></label>
                                <select asp-for="Suburb!.CityId" class="form-control" asp-items="ViewBag.CityId">
                                </select>
                                <span asp-validation-for="Suburb!.CityId" class="text-danger"></span>
                            </div>
                            <div class="row justify-content-center g-2 py-4">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </form>
                </div>
            } else
            {
                <span>Select suburb to edit</span>
            }
        </div>
    </div>
</div>