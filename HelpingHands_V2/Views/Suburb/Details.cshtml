@model HelpingHands_V2.Models.Suburb

@{
    ViewData["Title"] = "Details";
    var Suburb = ViewBag.Suburb;
}

<h1>Details</h1>

<div>
    <h4>Suburb</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SuburbName)
        </dt>
        <dd class = "col-sm-10">
            @Suburb.SuburbName
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PostalCode)
        </dt>
        <dd class = "col-sm-10">
            @Suburb.PostalCode
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class = "col-sm-10">
            @Suburb.CityName
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Suburb.SuburbId">Edit</a> |
    <a asp-action="Index">Back to List</a>
    <form asp-action="Delete">
        <input asp-for="SuburbId" value="@Suburb.SuburbId" type="hidden" />
        <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete: @Suburb.SuburbName?')" class="btn btn-danger" /> |
    </form>
</div>
