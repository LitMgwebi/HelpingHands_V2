@{
    ViewData["Title"] = "Nurses";
    var Message = ViewBag.Message;
}

<h2 class="display-4 text-center">Nurses</h2>
@if (Message != null)
{
    <p class="text-decoration-underline text-danger">@Message</p>
}
<hr />
<table class="table" id="myTable">
    <thead>
        <tr>
            <th>Username</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Grade</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.Nurses)
        {
            <tr>
                <td>
                    @item.Username
                </td>
                <td>
                    @item.Firstname
                </td>
                <td>
                    @item.Lastname
                </td>
                <td>
                    @item.Grade
                </td>
                <td>
                    <a asp-action="Profile" asp-route-id="@item.NurseId" class="btn btn-info">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>
