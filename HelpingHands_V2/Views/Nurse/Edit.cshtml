@model HelpingHands_V2.Models.Nurse

@{
    ViewData["Title"] = "Edit";
    var Message = ViewBag.Message;
}

<section class="container-fluid" id="Edit">
    <h2 class="display-4 text-center p-2">Edit Your Details</h2>
    @if (Message != null)
    {
        <p class="text-decoration-underline text-danger">@Message</p>
    }
    <div class="px-5"><hr /></div>
    <div class="container-fluid">
        <form enctype="multipart/form-data" asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="container px-5 ">
                <input asp-for="NurseId" type="hidden" />
                <input asp-for="EndUser!.UserId" name="UserId" type="hidden" />
                <input asp-for="EndUser!.UserType" name="UserType" type="hidden" />
                <input asp-for="EndUser!.ApplicationType" name="ApplicationType" type="hidden" />
                <input asp-for="EndUser!.Password" name="Password" type="hidden" />
                <input asp-for="EndUser!.ConfirmPassword" name="ConfirmPassword" type="hidden" />
                <input asp-for="EndUser!.Username" name="Username" type="hidden" />
                <input asp-for="EndUser!.ProfilePicture" name="ProfilePicture" type="hidden" />
                <input asp-for="EndUser!.ProfilePictureName" name="ProfilePictureName" type="hidden" />
                <div class="row row-cols-auto px-5 g-3 py-4 justify-content-start">
                    <div class="col-5">
                        <div class="input-group-sm">
                            <label asp-for="EndUser!.Firstname" class="form-label"></label>
                            <input asp-for="EndUser!.Firstname" name="Firstname" class="form-control" type="text" />
                            <span asp-validation-for="EndUser!.Firstname" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-5">
                        <div class="input-group-sm">
                            <label asp-for="EndUser!.Lastname" class="form-label"></label>
                            <input asp-for="EndUser!.Lastname" name="Lastname" class="form-control" type="text" />
                            <span asp-validation-for="EndUser!.Lastname" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-7">
                        <div class="input-group-sm">
                            <label asp-for="EndUser!.Email" class="form-label"></label>
                            <input asp-for="EndUser!.Email" name="Email" class="form-control" type="email" />
                            <span asp-validation-for="EndUser!.Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="input-group-sm">
                            <label asp-for="EndUser!.ProfilePicture" class="form-label"></label>
                            <input asp-for="EndUser!.ProfilePicture" name="file" accept="image/*" class="form-control" type="file" />
                            <span asp-validation-for="EndUser!.ProfilePicture" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="input-group-sm">
                            <label asp-for="EndUser!.Idnumber" class="form-label"></label>
                            <input asp-for="EndUser!.Idnumber" name="Idnumber" class="form-control" />
                            <span asp-validation-for="EndUser!.Idnumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-5">
                        <div class="input-group-sm">
                            <label asp-for="EndUser!.ContactNumber" class="form-label"></label>
                            <input asp-for="EndUser!.ContactNumber" name="ContactNumber" class="form-control" />
                            <span asp-validation-for="EndUser!.ContactNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="input-group-sm">
                            <label asp-for="EndUser!.DateOfBirth" class="form-label"></label>
                            <input asp-for="EndUser!.DateOfBirth" name="DateOfBirth" class="form-control" type="date" />
                            <span asp-validation-for="EndUser!.DateOfBirth" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="input-group-sm">
                            <label asp-for="EndUser!.Gender" class="form-label"></label>
                            <select asp-for="EndUser!.Gender" name="Gender" class="form-select" asp-items="ViewBag.Genders">
                                <option disabled selected>--- SELECT ---</option>
                            </select>
                            <span asp-validation-for="EndUser!.Gender" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-5">
                        <div class="form-group">
                            <label asp-for="Grade" class="form-label"></label>
                            <select asp-for="Grade" class="form-control" data-bs-toggle="tooltip" data-bs-title="Grade of the wounds you can help one">
                                <option>5 (Most difficult)</option>
                                <option>4</option>
                                <option>3</option>
                                <option>2</option>
                                <option>1 (Least difficult)</option>
                            </select>
                            <span asp-validation-for="Grade" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row justify-content-center g-2 py-4">
                    <div class="btn-group col-2">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        <a asp-action="Profile" asp-route-id="@Model?.NurseId" class="btn btn-secondary">Cancel</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>