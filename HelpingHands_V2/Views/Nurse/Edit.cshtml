@model HelpingHands_V2.Models.Nurse

@{
    ViewData["Title"] = "Edit";
    var Nurse = ViewBag.Nurse;
}

<h1>Edit</h1>

<h4>Nurse</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="NurseId" value="@Nurse.NurseId" type="hidden" />
            <div class="form-group">
                <label asp-for="Grade" class="control-label"></label>
                <input asp-for="Grade" value="@Nurse.Grade" class="form-control" />
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

