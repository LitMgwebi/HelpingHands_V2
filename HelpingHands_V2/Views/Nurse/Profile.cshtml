@model HelpingHands_V2.Models.Nurse

@{
    ViewData["Title"] = @User.FindFirst("Username")!.Value;
    var EndUser = ViewBag.User;
    var Nurse = ViewBag.Nurse;
    var Message = ViewBag.Message;
}

<h2 class="display-4 text-center">Profile</h2>
@if (Message != null)
{
    <p class="text-decoration-underline text-danger">@Message</p>
}

@if (User.IsInRole("P"))
{
    <a asp-action="Dashboard" asp-controller="Patient" asp-route-id="@User.FindFirst("UserId")!.Value" class="btn btn-secondary">Back</a>
}
else if (User.IsInRole("N"))
{
    <a asp-action="Dashboard" asp-controller="Nurse" asp-route-id="@User.FindFirst("UserId")!.Value" class="btn btn-secondary">Back</a>
}
else if (User.IsInRole("O"))
{
    <a asp-action="Dashboard" asp-controller="Manager" class="btn btn-secondary">Back</a>
}
else
{
    <a asp-action="Dashboard" asp-controller="Admin" class="btn btn-secondary">Back</a>
}

<hr />
<div class="row">
    <dl class="col-6">
        <dt class = "col-sm-4">
            Username
        </dt>
        <dd class = "col-sm-8">
            @Nurse.Username
        </dd>
        <dt class = "col-sm-4">
            First Name
        </dt>
        <dd class = "col-sm-8">
            @Nurse.Firstname
        </dd>
        <dt class = "col-sm-4">
            Last Name
        </dt>
        <dd class = "col-sm-8">
            @Nurse.Lastname
        </dd>
        <dt class = "col-sm-4">
            Date Of Birth
        </dt>
        <dd class="col-sm-10">
            @EndUser.DateOfBirth.Day @EndUser.DateOfBirth.ToString("MMMM") @EndUser.DateOfBirth.ToString("yyy")
        </dd>
        </dl>
        <dl class="col-6">
        <dt class = "col-sm-4">
            Email
        </dt>
        <dd class = "col-sm-8">
            @EndUser.Email
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Grade)
        </dt>
        <dd class="col-sm-8">
            @Nurse.Grade
        </dd>
        <dt class = "col-sm-4">
            Gender
        </dt>
        <dd class = "col-sm-8">
            @EndUser.Gender
        </dd>
        <dt class = "col-sm-4">
            Contact Number
        </dt>
        <dd class = "col-sm-8">
            @EndUser.ContactNumber
        </dd>
        <dt class = "col-sm-4">
            ID Number
        </dt>
        <dd class = "col-sm-8">
            @EndUser.Idnumber
        </dd>
        <dt class = "col-sm-4">
            Profile Picture
        </dt>
        <dd class = "col-sm-8">
            @EndUser.ProfilePicture
        </dd>
    </dl>
</div>
<div class="btn-group" role="group" aria-label="Control Panel">
    <a asp-action="Edit" asp-route-id="@Nurse.NurseId" class="btn btn-success">Edit</a><a asp-action="ChangePassword" asp-controller="EndUser" asp-route-id="@Nurse.NurseId" class="btn btn-success">ChangePassword</a>
    <form asp-action="Delete">
        <input asp-for="NurseId" value="@Nurse.NurseId" type="hidden" />
        <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete your account @Nurse.Firstname @Nurse.Lastname?')" class="btn btn-danger" />
    </form>
</div>
