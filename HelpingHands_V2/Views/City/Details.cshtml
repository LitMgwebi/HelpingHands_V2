@model HelpingHands_V2.Models.City
@{
    ViewData["Title"] = "Details";
    var City = ViewBag.City;
}

<h2 class="display-4 text-center">@City.CityName Details</h2>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            City Name:
        </dt>
        <dd class="col-sm-10">
            @City.CityName
        </dd>
        <dt class="col-sm-2">
            City Abbreviation:
        </dt>
        <dd class="col-sm-10">
            @City.CityAbbreviation
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@City.CityId">Edit</a> |
    <a asp-action="Index">Back to List</a> |
    <form asp-action="Delete">
        <input asp-for="CityId" value="@City.CityId" type="hidden" />
        <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete: @City.CityName?')" class="btn btn-danger" /> |
    </form>
</div>
