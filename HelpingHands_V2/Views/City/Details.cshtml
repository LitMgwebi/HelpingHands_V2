@model HelpingHands_V2.Models.City

@{
    ViewData["Title"] = "Details";
    var Message = ViewBag.Message;
}

<h2 class="display-4 text-center">@Model?.CityName Details</h2>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
<div class="row">
    <hr />
    <dl>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CityName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CityName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CityAbbreviation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CityAbbreviation)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.CityId" class="btn btn-success">Edit</a>
    <form asp-action="Delete">
        <input asp-for="CityId" value="@Model?.CityId" type="hidden" />
        <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete: @Model?.CityName?')" class="btn btn-danger" />
    </form>
</div>
