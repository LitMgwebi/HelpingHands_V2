@model HelpingHands_V2.Models.City

@{
    ViewData["Title"] = "Edit";
    var City = ViewBag.City;
}

<h2 class="display-4 text-center">Edit @City.CityName</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="CityId" value="@City.CityId" type="hidden"/>
            <div class="form-group">
                <label asp-for="CityName" class="control-label"></label>
                <input asp-for="CityName" class="form-control" value="@City.CityName"/>
                <span asp-validation-for="CityName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CityAbbreviation" class="control-label"></label>
                <input asp-for="CityAbbreviation" class="form-control" value="@City.CityAbbreviation" />
                <span asp-validation-for="CityAbbreviation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>