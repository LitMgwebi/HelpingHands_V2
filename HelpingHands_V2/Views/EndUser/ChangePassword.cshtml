@model ChangePasswordViewModel
@{
    ViewData["Title"] = "ChangePassword";
    var User = ViewBag.UserId;
}

<h2 class="display-4 text-center">Change Password</h2>

<hr />
<form asp-action="ChangePassword">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <section class="row">
        <div class="col-7">
            <input asp-for="UserId" value="@User" type="hidden" />
            <div class="form-group">
                <label asp-for="CurrentPassword" class="control-label"></label>
                <input asp-for="CurrentPassword" class="form-control" type="password" required/>
                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword" class="control-label"></label>
                <input asp-for="NewPassword" class="form-control" type="text" required/>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" type="text" required />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-action="Profile" asp-route-id="@User" class="btn btn-secondary">Cancel</a>
        </div>
    </section>
</form>