@model HelpingHands_V2.Models.EndUser

@{
    ViewData["Title"] = "Create";
    var Message = ViewBag.Message;
}

<h2 class="display-4 text-center">Online Registration</h2>
@if (Message != null)
{
    <p class="text-decoration-underline text-danger">@Message</p>
}

<hr />
<div class="container-fluid">
    <form enctype="multipart/form-data" asp-action="Register">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="container px-5 ">
            <input asp-for="Username" type="hidden" />
            <div class="row row-cols-auto px-5 g-3 py-4 justify-content-start">
                <div class="col-12">
                    <h4 class="display-6">Personal Information</h4>
                </div>
                <div class="col-5">
                    <div class="input-group-sm">
                        <label asp-for="Firstname" class="form-label"></label>
                        <input asp-for="Firstname" class="form-control" type="text" />
                        <span asp-validation-for="Firstname" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-5">
                    <div class="input-group-sm">
                        <label asp-for="Lastname" class="form-label"></label>
                        <input asp-for="Lastname" class="form-control" type="text" />
                        <span asp-validation-for="Lastname" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-7">
                    <div class="input-group-sm">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" type="email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="input-group-sm">
                        <label asp-for="ProfilePicture" class="form-label"></label>
                        <input asp-for="ProfilePicture" name="file" accept="image/*" class="form-control" type="file" />
                        <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="input-group-sm">
                        <label asp-for="Idnumber" class="form-label"></label>
                        <input asp-for="Idnumber" class="form-control" />
                        <span asp-validation-for="Idnumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-5">
                    <div class="input-group-sm">
                        <label asp-for="ContactNumber" class="form-label"></label>
                        <input asp-for="ContactNumber" class="form-control" />
                        <span asp-validation-for="ContactNumber" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-3">
                    <div class="input-group-sm">
                        <label asp-for="DateOfBirth" class="form-label"></label>
                        <input asp-for="DateOfBirth" class="form-control" type="date" />
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-3">
                    <div class="input-group-sm">
                        <label asp-for="Gender" class="form-label"></label>
                        <select asp-for="Gender" class="form-select" asp-items="ViewBag.Genders">
                            <option disabled selected>--- SELECT ---</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <hr/>
            <div class="row px-5 g-2 justify-content-start row-cols-auto py-4">
                <div class="col-12">
                    <h1 class="display-6">Account Information</h1>
                </div>
                <div class="col-10">
                    <div class="input-group-sm">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" type="password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-10">
                    <div class="input-group-sm">
                        <label asp-for="ConfirmPassword" class="form-label"></label>
                        <input asp-for="ConfirmPassword" class="form-control" type="password">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-3">
                    <div class="input-group-sm">
                        <label asp-for="ApplicationType" class="form-label"></label>
                        <select asp-for="ApplicationType" class="form-control">
                            <option disabled selected>--- SELECT ---</option>
                            <option value="N">Nurse</option>
                            <option value="P">Patient</option>
                        </select>
                        <span asp-validation-for="ApplicationType" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="row justify-content-center g-2 py-4">
                <div class="btn-group col-2">
                    <input type="submit" value="Register" class="btn btn-primary" />
                    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Cancel</a>
                </div>
            </div>
        </div>
    </form>
</div>

