@model HelpingHands_V2.Models.EndUser

@{
    ViewData["Title"] = "Edit";
    var EndUser = ViewBag.User;
    var Message = ViewBag.Message;
}
@if (User.IsInRole("A"))
{
    <h2 class="display-4 text-center">Edit @EndUser.Firstname Details</h2>
}else
{
    <h2 class="display-4 text-center">Edit @EndUser.Firstname @EndUser.Lastname Details</h2>
}
@if (Message != null)
{
    <p class="text-decoration-underline text-danger">@Message</p>
}

<hr />
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-5">
            <input asp-for="UserId" value="@EndUser.UserId" type="hidden" />
            <input asp-for="UserType" class="form-control" value="@EndUser.UserType" type="hidden" />
            <input asp-for="ApplicationType" class="form-control" value="@EndUser.ApplicationType" type="hidden" />
            <input asp-for="Password" value="@EndUser.Password" type="hidden" />
            <input asp-for="ConfirmPassword" value="@EndUser.Password"type="hidden"/>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" value="@EndUser.Username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Firstname" class="control-label"></label>
                <input asp-for="Firstname" class="form-control" value="@EndUser.Firstname" />
                <span asp-validation-for="Firstname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lastname" class="control-label"></label>
                <input asp-for="Lastname" class="form-control" value="@EndUser.Lastname" />
                <span asp-validation-for="Lastname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfBirth" class="control-label"></label>
                <input asp-for="DateOfBirth" class="form-control" type="date" value="@EndUser.DateOfBirth.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" value="@EndUser.Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="col-5">
            <input asp-for="Password" class="form-control" hidden value="@EndUser.Password" />
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <select asp-for="Gender" class="form-control" value="@EndUser.Gender">
                    <option>Female</option>
                    <option>Male</option>
                    <option>Non-binary</option>
                    <option>Gender Fluid</option>
                    <option>Other</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContactNumber" class="control-label"></label>
                <input asp-for="ContactNumber" class="form-control" value="@EndUser.ContactNumber" />
                <span asp-validation-for="ContactNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Idnumber" class="control-label"></label>
                <input asp-for="Idnumber" class="form-control" value="@EndUser.IDNumber" />
                <span asp-validation-for="Idnumber" class="text-danger"></span>
            </div>
            @* <div class="form-group">
            <label asp-for="ProfilePicture" class="control-label"></label>
            <input asp-for="ProfilePicture" class="form-control" value="@User.ProfilePicture" />
            <span asp-validation-for="ProfilePicture" class="text-danger"></span>
            </div>
            <div class="form-group">
            <label asp-for="ProfilePictureName" class="control-label"></label>
            <input asp-for="ProfilePictureName" class="form-control" value="@User.ProfilePictureName" />
            <span asp-validation-for="ProfilePictureName" class="text-danger"></span>
            </div> *@
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
            @if (User.IsInRole("A") || User.IsInRole("O"))
            {
                <a asp-action="Profile" asp-route-id="@EndUser.UserId" class="btn btn-secondary">Cancel</a>
            } else if (User.IsInRole("N"))
            {

                <a asp-action="Profile" asp-controller="Nurse" asp-route-id="@EndUser.UserId" class="btn btn-secondary">Cancel</a>
            }
            else if (User.IsInRole("P"))
            {

                <a asp-action="Profile" asp-controller="Patient" asp-route-id="@EndUser.UserId" class="btn btn-secondary">Cancel</a>
            }
        </div>
    </div>
</form>