@model HelpingHands_V2.Models.Condition

@{
    ViewData["Title"] = "Details";
    var Condition = ViewBag.Condition;
}

<h2 class="display-4 text-center">@Condition.ConditionName Details</h2>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
    <hr />

<div class="row">
    <dl>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ConditionName)
        </dt>
        <dd class = "col-sm-10">
            @Condition.ConditionName
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ConditionDescription)
        </dt>
        <dd class = "col-sm-10">
            @Condition.ConditionDescription
        </dd>
    </dl>
</div>
<div class="btn-group" role="group" aria-label="Control Panel">
    <a asp-action="Edit" asp-route-id="@Condition.ConditionId" class="btn btn-success">Edit</a>
    <form asp-action="Delete">
        <input asp-for="ConditionId" value="@Condition.ConditionId" type="hidden" />
        <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete: @Condition.ConditionName?')" lass="btn btn-danger" />
    </form>
</div>
