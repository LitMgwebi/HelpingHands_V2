@model HelpingHands_V2.Models.Condition

@{
    ViewData["Title"] = "Details";
    var Message = ViewBag.Message;
}

<h2 class="display-4 text-center">@Model?.ConditionName Details</h2>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
@if (Message != null)
{
    <p class="text-decoration-underline text-danger">@Message</p>
}
    <hr />

<div class="row">
    <dl>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ConditionName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ConditionName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ConditionDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ConditionDescription)
        </dd>
    </dl>
</div>
<div class="btn-group" role="group" aria-label="Control Panel">
    <a asp-action="Edit" asp-route-id="@Model?.ConditionId" class="btn btn-success">Edit</a>
    <form asp-action="Delete">
        <input asp-for="ConditionId" value="@Model?.ConditionId" type="hidden" />
        <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete: @Model?.ConditionName?')" class="btn btn-danger" />
    </form>
</div>
