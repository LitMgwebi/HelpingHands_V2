@model HelpingHands_V2.Models.Condition

@{
    ViewData["Title"] = "Details";
    var Condition = ViewBag.Condition;
}

<h1>Details</h1>

<div>
    <h4>Condition</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ConditionName)
        </dt>
        <dd class = "col-sm-10">
            @Condition.ConditionName
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ConditionDescription)
        </dt>
        <dd class = "col-sm-10">
            @Condition.ConditionDescription
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Condition.ConditionId">Edit</a> |
    <a asp-action="Index">Back to List</a>|
    <form asp-action="Delete">
        <input asp-for="ConditionId" value="@Condition.ConditionId" type="hidden" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
    </form>
</div>
