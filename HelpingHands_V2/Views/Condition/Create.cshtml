@model HelpingHands_V2.Models.Condition

@{
    ViewData["Title"] = "Create";
    var Message = ViewBag.Message;
}

<h2 class="display-4 text-center">Condition Form</h2>

@if (Message != null)
{
    <p class="text-decoration-underline text-danger">@Message</p>
}
<section class="px-5 py-5">
    <hr />
</section>
<div class="container-fluid p-lg-5 p-sm-2 my-4">
    <div class="row row-cols-auto d-flex align-items-center justify-content-center g-5">
        <div class="col-md-4 mx-lg-5">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-12">
                    <div class="input-group-sm">
                        <label asp-for="ConditionName" class="form-label"></label>
                        <input asp-for="ConditionName" class="form-control" />
                        <span asp-validation-for="ConditionName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12">
                    <div class="input-group-sm">
                        <label asp-for="ConditionDescription" class="form-label"></label>
                        <textarea asp-for="ConditionDescription" class="form-control" rows="3" autofocus></textarea>
                        <span asp-validation-for="ConditionDescription" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12">
                    <div class="row justify-content-center g-2 py-4">
                        <div class="btn-group col-auto">
                            <input type="submit" value="Create" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-4">
            <img src="/Media/chronicConditions.png" class="img-fluid rounded-2" alt="Helping hands">
        </div>
    </div>
</div>