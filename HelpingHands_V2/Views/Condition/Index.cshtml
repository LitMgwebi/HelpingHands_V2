@model IEnumerable<HelpingHands_V2.Models.Condition>

@{
    ViewData["Title"] = "Conditions";
    var Message = ViewBag.Message;
}

<h2 class="display-4 text-center">Conditions</h2>
@if (Message != null)
{
    <p class="text-decoration-underline text-danger">@Message</p>
}
<hr />
<a asp-action="Create" class="btn btn-primary">Create New</a>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ConditionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConditionDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.ConditionName)
                </td>
                <td>
                    @Html.DisplayFor(model => item.ConditionDescription)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.ConditionId" class="btn btn-info">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>
