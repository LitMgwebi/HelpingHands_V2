@model HelpingHands_V2.Models.Patient

@{
    ViewData["Title"] = "Edit";
    var Message = ViewBag.Message;
}

<h2 class="display-4 text-center">Edit @Model?.EndUser!.Firstname @Model?.EndUser!.Lastname</h2>
@if (Message != null)
{
    <p class="text-decoration-underline text-danger">@Message</p>
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="PatientId" value="@Model?.PatientId" type="hidden" />
            @if (Model!.AddressLineOne == null)
            {
            <div class="form-group">
                <label asp-for="AddressLineOne" class="control-label"></label>
                <input asp-for="AddressLineOne" class="form-control" />
                <span asp-validation-for="AddressLineOne" class="text-danger"></span>
                </div>
            } else
            {
                <div class="form-group">
                    <label asp-for="AddressLineOne" class="control-label"></label>
                    <input asp-for="AddressLineOne" class="form-control" />
                    <span asp-validation-for="AddressLineOne" class="text-danger"></span>
                </div>
            }
            @if (Model!.AddressLineTwo == null)
            {
                <div class="form-group">
                    <label asp-for="AddressLineTwo" class="control-label"></label>
                    <input asp-for="AddressLineTwo" class="form-control" />
                    <span asp-validation-for="AddressLineTwo" class="text-danger"></span>
                </div>
            } else
            {
                <div class="form-group">
                    <label asp-for="AddressLineTwo" class="control-label"></label>
                    <input asp-for="AddressLineTwo" class="form-control" />
                    <span asp-validation-for="AddressLineTwo" class="text-danger"></span>
                </div>
            }
            <div class="form-group">
                <label asp-for="SuburbId" class="control-label"></label>
                <select asp-for="SuburbId" class="form-control" asp-items="ViewBag.SuburbId">
                </select>
                <span asp-validation-for="SuburbId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Icename" class="control-label"></label>
                <input asp-for="Icename" class="form-control" />
                <span asp-validation-for="Icename" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Icenumber" class="control-label"></label>
                <input asp-for="Icenumber" class="form-control" />
                <span asp-validation-for="Icenumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdditionalInfo" class="control-label"></label>
                <textarea asp-for="AdditionalInfo" class="form-control" rows="3" autofocus>
                </textarea>
                <span asp-validation-for="AdditionalInfo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                @if (User.IsInRole("A") || User.IsInRole("O"))
                {
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                } else
                {
                    <a asp-action="Profile" asp-route-id="@Model?.PatientId" class="btn btn-secondary">Cancel</a>
                }
            </div>
        </form>
    </div>
</div>