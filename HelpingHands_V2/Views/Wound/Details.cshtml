@model HelpingHands_V2.Models.Wound

@{
    ViewData["Title"] = "Details";
    var Message = ViewBag.Message;
}

<h2 class="display-4 text-center">@Model?.WoundName Details</h2>
@if (Message != null)
{
    <p class="text-decoration-underline text-danger">@Message</p>
}
<a asp-action="Index" class="btn btn-secondary">Back</a>
<hr/>
<div>
    <h4>Wound</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.WoundName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WoundName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Grade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Grade)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.WoundDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WoundDescription)
        </dd>
    </dl>
</div>
<div class="btn-group" role="group" aria-label="Control Panel">
    <a asp-action="Edit" asp-route-id="@Model?.WoundId" class="btn btn-success">Edit</a>
    <form asp-action="Delete">
        <input asp-for="WoundId" value="@Model?.WoundId" type="hidden" />
        <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete: @Model?.WoundName?')" class="btn btn-danger" />
    </form>
</div>
