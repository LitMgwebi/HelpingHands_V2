@model HelpingHands_V2.Models.Wound

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Wound</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.WoundName)
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.Wound.WoundName
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Grade)
        </dt>
        <dd class = "col-sm-10">
