@model HelpingHands_V2.Models.Wound

@{
    ViewData["Title"] = "Details";
    var Wound = ViewBag.Wound;
}

<h1>Details</h1>

<div>
    <h4>Wound</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.WoundName)
        </dt>
        <dd class = "col-sm-10">
            @Wound.WoundName
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Grade)
        </dt>
        <dd class = "col-sm-10">
            @Wound.Grade
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.WoundDescription)
        </dt>
        <dd class = "col-sm-10">
            @Wound.WoundDescription
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Wound.WoundId">Edit</a> |
    <a asp-action="Index">Back to List</a>
    <form asp-action="Delete">
        <input asp-for="WoundId" value="@Wound.WoundId" type="hidden" />
        <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete: @Wound.WoundName?')" class="btn btn-danger" /> |
    </form>
</div>
