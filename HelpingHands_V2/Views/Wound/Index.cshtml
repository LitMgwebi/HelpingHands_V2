@model IEnumerable<HelpingHands_V2.Models.Wound>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.WoundName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WoundDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in ViewBag.Wounds) {
        <tr>
            <td>
                @item.WoundName
            </td>
            <td>
                @item.Grade
            </td>
            <td>
                @item.WoundDescription
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.WoundId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.WoundId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.WoundId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
