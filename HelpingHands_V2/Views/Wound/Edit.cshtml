@model HelpingHands_V2.Models.Wound

@{
    ViewData["Title"] = "Edit";
    var Message = ViewBag.Message;
}

<h2 class="display-4 text-center">Edit @Model?.WoundName</h2>
@if (Message != null)
{
    <p class="text-decoration-underline text-danger">@Message</p>
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="WoundId" value="@Model?.WoundId" type="hidden"/>
            <div class="form-group">
                <label asp-for="WoundName" class="control-label"></label>
                <input asp-for="WoundName" class="form-control" />
                <span asp-validation-for="WoundName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Grade" class="control-label"></label>
                <input asp-for="Grade" class="form-control"/>
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WoundDescription" class="control-label"></label>
                <textarea asp-for="WoundDescription" class="form-control" rows="3" autofocus>
                </textarea>
                <span asp-validation-for="WoundDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Details" asp-route-id="@Model?.WoundId" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>