@model HelpingHands_V2.Models.PatientCondition

@{
    ViewData["Title"] = "Details";
    var PC = ViewBag.PatientCondition;
}

<h1>Details</h1>

<div>
    <h4>PatientCondition</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Condition)
        </dt>
        <dd class = "col-sm-10">
            @PC.ConditionName
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Patient)
        </dt>
        <dd class = "col-sm-10">
            @PC.PatientFirstname @PC.PatientLastname
        </dd>
    </dl>
</div>
<div>
    @* @Html.ActionLink("Edit", "Edit", new {  id = @PC.PatientId  }) | *@
    <a asp-action="IndexForPatient" asp-route-id="@User.FindFirst("UserId")!.Value">Back to List</a>
    <form asp-action="Delete">
        <input asp-for="PatientId" value="@PC.PatientId" type="hidden" />
        <input asp-for="ConditionId" value="@PC.ConditionId" type="hidden" />
        <input asp-for="Active" value="@PC.Active" type="hidden" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
    </form>
</div>
