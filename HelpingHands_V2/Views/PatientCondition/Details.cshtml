@model HelpingHands_V2.Models.PatientCondition

@{
    ViewData["Title"] = "Details";
    var PC = ViewBag.PatientCondition;
}

<h1>Details</h1>

<div>
    <h4>PatientCondition</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Condition)
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.PatientCondition.ConditionName
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Patient)
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.PatientCondition.PatientFirstname @ViewBag.PatientCondition.PatientLastname
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new {  id = @ViewBag.PatientCondition.PatientId  }) |
    <a asp-action="IndexForPatient" asp-route-id="@User.FindFirst("UserId")!.Value">Back to List</a>
</div>
