@model HelpingHands_V2.Models.PatientCondition

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>PatientCondition</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PatientId" class="control-label"></label>
                <input asp-for="PatientId" placeholder="@ViewBag.PatientId" value="@ViewBag.PatientId"  hidden/>
            </div>
            <div class="form-group">
                <label asp-for="ConditionId" class="control-label"></label>
                <select asp-for="ConditionId" class ="form-control" asp-items="ViewBag.ConditionId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="IndexForPatient" asp-route-id="@User.FindFirst("UserId")!.Value">Back to List</a>
</div>

