@model HelpingHands_V2.Models.PatientCondition

@{
    ViewData["Title"] = "Create";
    var Message = ViewBag.Message;
}

<h2 class="display-4 text-center">Patient Condition Form</h2>
@if (Message != null)
{
    <p class="text-decoration-underline text-danger">@Message</p>
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="PatientId" placeholder="@ViewBag.PatientId" value="@ViewBag.PatientId"/>
            <div class="form-group">
                <label asp-for="ConditionId" class="control-label"></label>
                <select asp-for="ConditionId" class ="form-control" asp-items="ViewBag.Conditions"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="IndexForPatient" class="btn btn-secondary" asp-route-id="@User.FindFirst("UserId")!.Value">Cancel</a>
            </div>
        </form>
    </div>
</div>