@model HelpingHands_V2.ViewModels.OperationsViewModel
@{
    ViewData["Title"] = "Operational Hours";
    var Message = ViewBag.Message;
}

<h2 class="display-4 text-center">Operational Hours</h2>
@if (Message != null)
{
    <p class="text-decoration-underline text-danger">@Message</p>
}
<hr />
<a asp-action="Create" class="btn btn-primary">Create New</a>

<div class="container-fluid">
    <div class="row row-cols-auto">
        <div class="col-lg-8">
            <table class="table" id="myTable">
                <thead>
                    <tr>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.OperationHour!.OperationDay)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.OperationHour!.OpenTime)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.OperationHour!.CloseTime)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody class="table-group-divider">
                    @foreach (var item in Model.OperationHours!)
                    {
                        <tr scope="row">
                            <td>
                                @Html.DisplayFor(modelItem => item.OperationDay)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OpenTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CloseTime)
                            </td>
                            <td>
                                <div class="btn-group">
                                    <form asp-action="Index">
                                        <input asp-for="@item.OperationHoursId" name="OperationHoursId" type="hidden" />
                                        <input type="submit" value="Edit" class="btn btn-success" />
                                    </form>
                                    <form asp-action="Delete">
                                        <input asp-for="@item.OperationHoursId" name="OperationHoursId" type="hidden" />
                                        <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete this record?')" class="btn btn-danger" />
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-lg-4">
            @if(Model.OperationHour != null)
            {
                <h2 class="display-4 text-center">Edit @Model?.OperationHour.OperationDay Hours</h2>
                <section class="px-5 py-4">
                    <hr />
                </section>
                <div class="row">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input asp-for="OperationHour!.OperationHoursId" type="hidden" />
                        <div class="col-12">
                            <div class="input-group-sm">
                                <label asp-for="OperationHour!.OperationDay" class="form-label"></label>
                                <input asp-for="OperationHour!.OperationDay" type="text" class="form-control" />
                                <span asp-validation-for="OperationHour!.OperationDay" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="input-group-sm">
                                <label asp-for="OperationHour!.OpenTime" class="form-label"></label>
                                <input asp-for="OperationHour!.OpenTime" type="time" class="form-control" />
                                <span asp-validation-for="OperationHour!.OpenTime" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="input-group-sm">
                                <label asp-for="OperationHour!.CloseTime" class="form-label"></label>
                                <input asp-for="OperationHour!.CloseTime" type="time" class="form-control" />
                                <span asp-validation-for="OperationHour!.CloseTime" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="btn-group">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </div>
                    </form>
                </div>
            } else
            {
                <span>
                    Select record to edit
                </span>
            }
        </div>
    </div>
</div>