@model HelpingHands_V2.Models.OperationHour

@{
    ViewData["Title"] = "Details";
    var Operation = ViewBag.Operation;
}

<h2 class="display-4 text-center">Details</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OperationDay)
        </dt>
        <dd class="col-sm-10">
            @Operation.OperationDay
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OpenTime)
        </dt>
        <dd class="col-sm-10">
            @Operation.OpenTime
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CloseTime)
        </dt>
        <dd class="col-sm-10">
            @Operation.CloseTime
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Operation.OperationHoursId">Edit</a> |
    <a asp-action="Index">Back to List</a>
    <form asp-action="Delete">
        <input asp-for="OperationHoursId" value="@Operation.OperationHoursId" type="hidden" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
    </form>
</div>
