@{
    ViewData["Title"] = "Details";
}

<h2 class="display-4 text-center">Details</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Operational Day:
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Operation.OperationDay
        </dd>
        <dt class="col-sm-2">
            Opening Time:
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Operation.OpenTime
        </dd>
        <dt class="col-sm-2">
            Closing Time:
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Operation.CloseTime
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@ViewBag.Operation.OperationHoursId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
