@model HelpingHands_V2.Models.BusinessInformation

@{
    ViewData["Title"] = "Business Information";
    var Bi = ViewBag.BusinessInfo;
}

<h2 class="display-4 text-center">Business Information</h2>
<hr />
<a asp-action="Dashboard" asp-controller="Admin" class="btn btn-secondary">Back</a>

<div class="row">
    <dl>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrganizationName)
        </dt>
        <dd class = "col-sm-10">
            @Bi.OrganizationName
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nponumber)
        </dt>
        <dd class = "col-sm-10">
            @Bi.NPONumber
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AddressLineOne)
        </dt>
        <dd class = "col-sm-10">
            @Bi.AddressLineOne
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AddressLineTwo)
        </dt>
        <dd class = "col-sm-10">
            @Bi.AddressLineTwo
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ContactNumber)
        </dt>
        <dd class = "col-sm-10">
            @Bi.ContactNumber
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Bi.Email
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Suburb)
        </dt>
        <dd class = "col-sm-10">
            @Bi.SuburbName
        </dd>
    </dl>
</div>
<div class="btn-group" role="group" aria-label="Basic mixed styles example">
    <a asp-action="Edit" asp-route-id="@Bi.BusinessId" class="btn btn-success">Edit</a>
</div>
