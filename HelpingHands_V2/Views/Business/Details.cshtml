@model HelpingHands_V2.Models.BusinessInformation

@{
    ViewData["Title"] = "Business Information";
    var Message = ViewBag.Message;
}

<h2 class="display-4 text-center">Business Information</h2>
@if (Message != null)
{
    <p class="text-decoration-underline text-danger">@Message</p>
}
<hr />
<a asp-action="Dashboard" asp-controller="Admin" class="btn btn-secondary">Back</a>

<div class="row">
    <dl>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrganizationName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrganizationName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nponumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nponumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AddressLineOne)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AddressLineOne)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AddressLineTwo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AddressLineTwo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ContactNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContactNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Suburb)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Suburb!.SuburbName)
        </dd>
    </dl>
</div>
<div class="btn-group" role="group" aria-label="Basic mixed styles example">
    <a asp-action="Edit" asp-route-id="@Model?.BusinessId" class="btn btn-success">Edit</a>
</div>
