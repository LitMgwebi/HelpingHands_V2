@model HelpingHands_V2.Models.BusinessInformation

@{
    ViewData["Title"] = "Edit";
    var Bi = ViewBag.BusinessInfo;
}

<h1>Edit</h1>
<h4>BusinessInformation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="BusinessId" value="@Bi.BusinessId" type="hidden" />
            <div class="form-group">
                <label asp-for="OrganizationName" class="control-label"></label>
                <input asp-for="OrganizationName" class="form-control" value="@Bi.OrganizationName" />
                <span asp-validation-for="OrganizationName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nponumber" class="control-label"></label>
                <input asp-for="Nponumber" class="form-control" value="@Bi.NPONumber" />
                <span asp-validation-for="Nponumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddressLineOne" class="control-label"></label>
                <input asp-for="AddressLineOne" class="form-control" value="@Bi.AddressLineOne" />
                <span asp-validation-for="AddressLineOne" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddressLineTwo" class="control-label"></label>
                <input asp-for="AddressLineTwo" class="form-control" value="@Bi.AddressLineTwo" />
                <span asp-validation-for="AddressLineTwo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SuburbId" class="control-label"></label>
                <select asp-for="SuburbId" class="form-control" asp-items="ViewBag.SuburbId">
                    <option value="@Bi.SuburbId" selected disabled>@Bi.SuburbName</option>
                </select>
                <span asp-validation-for="SuburbId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContactNumber" class="control-label"></label>
                <input asp-for="ContactNumber" class="form-control" value="@Bi.ContactNumber" />
                <span asp-validation-for="ContactNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" value="@Bi.Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

