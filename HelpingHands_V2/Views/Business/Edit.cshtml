@model HelpingHands_V2.Models.BusinessInformation

@{
    ViewData["Title"] = "Edit";
    var Message = ViewBag.Message;
}
<section class="container-fluid" id="Edit">
    <h2 class="display-4 text-center p-2">Edit Business Information</h2>
    @if (Message != null)
    {
        <p class="text-decoration-underline text-danger">@Message</p>
    }
    <div class="px-5"><hr /></div>
    <div class="container-fluid py-md-5">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="BusinessId" type="hidden" />
            <div class="d-flex row row-cols-md-2 row-cols-auto justify-content-evenly p-md-2 p-1">
                <div class="col col-md-4">
                    <div class="row row-cols-1 justify-content-center">
                        <h2 class="h3 text-center">Organization Information</h2>
                        <section class="px-5">
                            <hr />
                        </section>
                        <div class="col-md-8">
                            <div class="input-group-sm">
                                <label asp-for="OrganizationName" class="form-label"></label>
                                <input asp-for="OrganizationName" class="form-control" />
                                <span asp-validation-for="OrganizationName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="input-group-sm">
                                <label asp-for="Nponumber" class="form-label"></label>
                                <input asp-for="Nponumber" class="form-control" />
                                <span asp-validation-for="Nponumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="input-group-sm">
                                <label asp-for="ContactNumber" class="form-label"></label>
                                <input asp-for="ContactNumber" class="form-control" />
                                <span asp-validation-for="ContactNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="input-group-sm">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="col col-md-4">
                    <div class="row row-cols-1 justify-content-center align-items-center">
                        <h2 class="h3 text-center">Organization Address</h2>
                        <section class="px-5">
                            <hr />
                        </section>
                        <div class="col-md-8">
                            <div class="input-group-sm">
                                <label asp-for="AddressLineOne" class="form-label"></label>
                                <input asp-for="AddressLineOne" class="form-control" />
                                <span asp-validation-for="AddressLineOne" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="input-group-sm">
                                <label asp-for="AddressLineTwo" class="form-label"></label>
                                <input asp-for="AddressLineTwo" class="form-control" />
                                <span asp-validation-for="AddressLineTwo" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="input-group-sm">
                                <label asp-for="SuburbId" class="form-label"></label>
                                <select asp-for="SuburbId" class="form-control" asp-items="ViewBag.SuburbId">
                                </select>
                                <span asp-validation-for="SuburbId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="row p-md-2 p-1">
                <div class="col-12 d-flex align-items-center justify-content-center">
                    <div class="btn-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        <a asp-action="Details" class="btn btn-secondary">Back</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>