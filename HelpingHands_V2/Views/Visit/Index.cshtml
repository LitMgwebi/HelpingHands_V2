@model IEnumerable<HelpingHands_V2.Models.Visit>

@{
    ViewData["Title"] = "Visits";
    var Message = ViewBag.Message;
}

<h2 class="display-4 text-center">Visits</h2>
@if (Message != null)
{
    <p class="text-decoration-underline text-danger">@Message</p>
}
<hr />
<a asp-action="Create" class="btn btn-primary">Create New</a>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VisitDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Arrival)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departure)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WoundCondition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contract)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.Visits)
        {
            <tr>
                <td>
                    @item.VisitDate.Day @item.VisitDate.ToString("MMM")
                </td>
                <td>
                    @item.Arrival
                </td>
                <td>
                    @item.Departure
                </td>
                <td>
                    @item.WoundCondition
                </td>
                <td>
                    @item.ContractId
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.VisitId" class="btn btn-info">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>
