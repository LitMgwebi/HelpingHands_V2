@model HelpingHands_V2.Models.Visit

@{
    ViewData["Title"] = "Edit";
    var Visit = ViewBag.Visit;
}

<h2 class="display-4 text-center">Edit Visit</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="VisitId" value="@Visit.VisitId" type="hidden" />
            <div class="form-group">
                <label asp-for="ContractId" class="control-label"></label>
                <input asp-for="ContractId" type="text" value="@Visit.ContractId" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="VisitDate" class="control-label"></label>
                <input asp-for="VisitDate" class="form-control" type="date" value="@Visit.VisitDate.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="VisitDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApproxTime" class="control-label"></label>
                <input asp-for="ApproxTime" type="time" class="form-control" value="@Visit.ApproxTime" />
                <span asp-validation-for="ApproxTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Arrival" class="control-label"></label>
                <input asp-for="Arrival" type="time" class="form-control" value="@Visit.Arrival" />
                <span asp-validation-for="Arrival" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Departure" class="control-label"></label>
                <input asp-for="Departure" type="time" class="form-control" value="@Visit.Departure" />
                <span asp-validation-for="Departure" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WoundCondition" class="control-label"></label>
                <textarea name="WoundCondition" class="form-control" rows="3" autofocus>
                    @Visit.WoundCondition
                </textarea>
                <span asp-validation-for="WoundCondition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <textarea name="Note" class="form-control" rows="3" autofocus>
                    @Visit.Note
                </textarea>
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>