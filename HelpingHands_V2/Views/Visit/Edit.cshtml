@model HelpingHands_V2.Models.Visit

@{
    ViewData["Title"] = "Edit";
    var Message = ViewBag.Message;
}

<h2 class="display-4 text-center">Edit Visit</h2>
@if (Message != null)
{
    <p class="text-decoration-underline text-danger">@Message</p>
}
<hr />
<div class="row">
    <form asp-action="Edit">
        <div class="col-md-4">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="VisitId" value="@Model?.VisitId" type="hidden" />
            <input asp-for="ContractId" type="text" value="@Model?.ContractId" class="form-control" hidden />
            <div class="form-group">
                <label asp-for="VisitDate" class="control-label"></label>
                <input asp-for="VisitDate" class="form-control" type="date"/>
                <span asp-validation-for="VisitDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApproxTime" class="control-label"></label>
                <input asp-for="ApproxTime" type="time" class="form-control"/>
                <span asp-validation-for="ApproxTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Arrival" class="control-label"></label>
                <input asp-for="Arrival" type="time" class="form-control"/>
                <span asp-validation-for="Arrival" class="text-danger"></span>
            </div>
            
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Departure" class="control-label"></label>
                <input asp-for="Departure" type="time" class="form-control"/>
                <span asp-validation-for="Departure" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WoundCondition" class="control-label"></label>
                <textarea asp-for="WoundCondition" class="form-control" rows="3" autofocus>
                </textarea>
                <span asp-validation-for="WoundCondition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <textarea asp-for="Note" class="form-control" rows="3" autofocus>
                </textarea>
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-action="Details" asp-route-id="@Model?.VisitId" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>