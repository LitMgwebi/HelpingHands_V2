@model HelpingHands_V2.Models.Visit

@{
    ViewData["Title"] = "Details";
    var Visit = ViewBag.Visit;
}

<h1>Details</h1>

<div>
    <h4>Visit</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VisitDate)
        </dt>
        <dd class = "col-sm-10">
            @Visit.VisitDate.Day @Visit.VisitDate.ToString("MMMM")
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ApproxTime)
        </dt>
        <dd class = "col-sm-10">
            @Visit.ApproxTime
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Arrival)
        </dt>
        <dd class = "col-sm-10">
            @Visit.Arrival
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Departure)
        </dt>
        <dd class = "col-sm-10">
            @Visit.Departure
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.WoundCondition)
        </dt>
        <dd class = "col-sm-10">
            @Visit.WoundCondition
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Note)
        </dt>
        <dd class = "col-sm-10">
            @Visit.Note
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Contract)
        </dt>
        <dd class = "col-sm-10">
            #@Visit.ContractId
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Visit.VisitId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
