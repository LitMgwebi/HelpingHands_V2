@model HelpingHands_V2.Models.Visit

@{
    ViewData["Title"] = "Details";
    var Message = ViewBag.Message;
}

<h2 class="display-4 text-center">Visit Details</h2>
@if (Message != null)
{
    <p class="text-decoration-underline text-danger">@Message</p>
}
@if (User.IsInRole("N"))
{
    <a asp-action="Dashboard" asp-controller="Nurse" asp-route-id="@User.FindFirst("UserId")!.Value" class="btn btn-secondary">Back</a>
}
else if (User.IsInRole("P"))
{
    <a asp-action="Dashboard" asp-controller="Patient" asp-route-id="@User.FindFirst("UserId")!.Value" class="btn btn-secondary">Back</a>
}
else
{
    <a asp-action="Index" class="btn btn-secondary">Back</a>
}
<hr />
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VisitDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VisitDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ApproxTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApproxTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Arrival)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Arrival)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Departure)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Departure)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.WoundCondition)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WoundCondition)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Note)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Note)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Contract)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContractId)
        </dd>
    </dl>
</div>
<div class="btn-group" role="group" aria-label="Control Panel">
    <a asp-action="Edit" asp-route-id="@Model?.VisitId" class="btn btn-success">Edit</a>
    <form asp-action="Delete">
        <input asp-for="VisitId" value="@Model?.VisitId" type="hidden" />
        <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete visit: #@Model?.VisitId?')" class="btn btn-danger" />
    </form>
</div>
