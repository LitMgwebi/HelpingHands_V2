@model HelpingHands_V2.Models.Visit

@{
    ViewData["Title"] = "Details";
    var Visit = ViewBag.Visit;
}

<h2 class="display-4 text-center">Visit Details</h2>
<a asp-action="Index" class="btn btn-secondary">Back</a>

<div>
    <h4>Visit</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VisitDate)
        </dt>
        <dd class = "col-sm-10">
            @Visit.VisitDate.Day @Visit.VisitDate.ToString("MMMM")
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ApproxTime)
        </dt>
        <dd class = "col-sm-10">
            @Visit.ApproxTime
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Arrival)
        </dt>
        <dd class = "col-sm-10">
            @Visit.Arrival
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Departure)
        </dt>
        <dd class = "col-sm-10">
            @Visit.Departure
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.WoundCondition)
        </dt>
        <dd class = "col-sm-10">
            @Visit.WoundCondition
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Note)
        </dt>
        <dd class = "col-sm-10">
            @Visit.Note
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Contract)
        </dt>
        <dd class = "col-sm-10">
            #@Visit.ContractId
        </dd>
    </dl>
</div>
<div class="btn-group" role="group" aria-label="Control Panel">
    <a asp-action="Edit" asp-route-id="@Visit.VisitId" class="btn btn-success">Edit</a>
    <form asp-action="Delete">
        <input asp-for="VisitId" value="@Visit.VisitId" type="hidden" />
        <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete visit: #@Visit.VisitId?')" class="btn btn-danger" /> |
    </form>
</div>
